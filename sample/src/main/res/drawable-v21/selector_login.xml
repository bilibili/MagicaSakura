<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/theme_color_primary_dark">
    <!--<item-->
        <!--android:id="@android:id/mask"-->
        <!--android:drawable="@color/theme_color_primary" />-->
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="4dp" />
                    <padding
                        android:bottom="@dimen/padding_half"
                        android:left="@dimen/padding_half"
                        android:right="@dimen/padding_half"
                        android:top="@dimen/padding_half" />
                    <solid
                        android:alpha="0.3"
                        android:color="@color/theme_color_primary" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="4dp" />
                    <padding
                        android:bottom="@dimen/padding_half"
                        android:left="@dimen/padding_half"
                        android:right="@dimen/padding_half"
                        android:top="@dimen/padding_half" />
                    <solid android:color="@color/theme_color_primary_dark" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners android:radius="4dp" />
                    <padding
                        android:bottom="@dimen/padding_half"
                        android:left="@dimen/padding_half"
                        android:right="@dimen/padding_half"
                        android:top="@dimen/padding_half" />
                    <solid android:color="@color/theme_color_primary" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
